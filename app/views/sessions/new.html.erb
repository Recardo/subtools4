<p><%#= link_to "Passwort vergessen?", new_password_reset_path %></p>

<h1>Anmelden</h1>  
  
<%= form_tag sessions_path do %>  
  <div class="field">  
    <%= label_tag :email %>  
    <%= text_field_tag :email, params[:email] %>  
  </div>  
  <div class="field">  
    <%= label_tag :password %>  
    <%= password_field_tag :password %>  
  </div>      
  <div class="field">  
    <%= label_tag :remember_me %>  
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>  
  </div>
  <div class="actions"><%= submit_tag "Anmelden" %></div>       
  <%= link_to "Passwort vergessen", new_password_reset_path%>
<% end %>